<%= form_with url: messages_path, method: :post do %>
  <div>
    <%= label_tag :to, 'Recipient Phone Number' %>
    <%= text_field_tag :to %>
  </div>
  <div>
    <%= label_tag :body, 'Message' %>
    <%= text_area_tag :body %>
  </div>
  <div>
    <%= submit_tag 'Send Message' %>
  </div>
<% end %>
